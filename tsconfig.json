{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "removeComments": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "exclude": ["node_modules", "playwright.config.ts", "tests", "example"],
  "include": ["./index.ts", "./plugin"]
}
